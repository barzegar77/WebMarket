@model Product
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


        <form method="post">

            <div class="container">
   <div class="row mb-4">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>ایجاد محصول</h2>
            <hr />
        </div>
       @* <div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="col mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="Description"></label>
            <textarea rows="10" asp-for="Description" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="ShortDescription"></label>
            <textarea rows="5" asp-for="ShortDescription" class="form-control"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger" ></span>
        </div>       
        <div class="col mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger" ></span>
        </div>       
        <div class="col mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="ImgeUrl"></label>
            <input asp-for="ImgeUrl" class="form-control" />
            <span asp-validation-for="ImgeUrl" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="ImageTitle"></label>
            <input asp-for="ImageTitle" class="form-control" />
            <span asp-validation-for="ImageTitle" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="ImageAlt"></label>
            <input asp-for="ImageAlt" class="form-control" />
            <span asp-validation-for="ImageAlt" class="text-danger" ></span>
        </div>
           <div class="col mb-3">
            <label asp-for="CategoryId"></label>
           <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-select">
               <option disabled selected>--انتخاب دسته--</option>
           </select>
            <span asp-validation-for="CategoryId" class="text-danger" ></span>
        </div>
               <div class="col mb-3">
            <label asp-for="CoverTypeId"></label>
                  <select asp-for="CategoryId" asp-items="@ViewBag.CoverTypeList" class="form-select">
               <option disabled selected>--انتخاب کاور تایپ--</option>
           </select>
            <span asp-validation-for="CoverTypeId" class="text-danger" ></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            ایجاد محصول
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:170px">
            بازگشت به لیست
        </a>
    </div>
       </div>
</div>
</br>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

