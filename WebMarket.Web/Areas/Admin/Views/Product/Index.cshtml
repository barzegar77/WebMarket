@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="Container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2>
                لیست محصولات
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> ایجاد محصول جدید
            </a>
        </div>
    </div>
    <br />

<table class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>نام محصول</th>
            <th>شابک</th>
            <th>نویسنده</th>
            <th>قیمت</th>
            <th>دسته بندی</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Title
                </td>
                <td>
                    @obj.ISBN
                </td>
                <td>
                    @obj.Author
                </td>
                <td>
                    @obj.Price
                </td>
                <td>
                    @obj.CategoryId
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="edit" asp-route-id="@obj.Id" >
                            <i class="bi bi-pencil-square"></i> ویرایش
                        </a>
                                 <a asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id" >
                           <i class="bi bi-trash3"></i> حذف
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>